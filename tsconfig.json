{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/src/*"]
      }
    },
    "include": [
      "backend/src",
      "frontend/src",
      "shared/src",
      "infrastructure"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  